
<div id="<%= dom_id property %>">
  <div class="max-w-sm w-full lg:max-w-full lg:flex my-4">
  <div class="h-64 lg:h-auto lg:w-64 flex-none rounded-t lg:rounded-t-none lg:rounded-l text-center" src="property">
    <% if property.photo.attached? %>
      <%= cl_image_tag property.photo.first.key, :crop=>"fill", class:"w-full h-full object-cover" %>
    <% else %>
      <%= image_tag ('house1'), class:"w-full h-full object-cover" %>
    <% end %>
  </div>
  <div class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <p class="text-sm text-gray-600 flex items-center">
        <%= property.name %>
        <%= property.price %> <%= property.currency %>
        <%= property.surface_area %> sqm
        floor: <%= property.floor %>
        Bed: <%= property.bed %>
        Bath: <%= property.bath %>
      </p>
      <div class="text-gray-900 font-bold text-xl mb-2">Title</div>
      <p class="text-gray-700 text-base">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptatibus quia, nulla! Maiores et perferendis eaque, exercitationem praesentium nihil.</p>
      <%= property.address %>
    </div>
    <div class="flex items-center">
      <img class="w-10 h-10 rounded-full mr-4" src="/assets/logo.png" alt="avatar">
      <div class="text-sm">
        <p class="text-gray-900 leading-none"></p>
        <p class="text-gray-600"><%= property.user.first_name %></p>
      </div>
    </div>
  </div>
</div>
</div>
