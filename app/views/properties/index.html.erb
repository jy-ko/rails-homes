<div class="h-fit">
  <div class="p-12 flex flex-col mx-auto w-9/12">
    <h1 class="text-3xl font-normal leading-normal mt-0 mb-4 text-gray-700">Let's find your home</h1>
    <%= form_with url: properties_path, method: :get, class: "flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a property"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
    <div class="rounded-sm max-w-full mx-auto" style="width: 100%; height: 480px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <div id="properties" class="mt-12 mx-auto">
    <% @properties.each do |property| %>
        <%= link_to property do %>
          <%= render property %> 
        <% end %>
      <% end %> 
      <div class="text-center">
          <%= paginate @properties %>
      </div>
    </div> 
  </div>
</div>
