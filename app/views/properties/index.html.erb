<p style="color: green"><%= notice %></p>

<div class="mt-10 mb-20 p-10">
  <h1 class="text-lg font-bold m-10">Properties</h1>

  <div id="properties">
    <div class="w-3/4 h-96 mx-auto my-0 rounded "
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div id="properties-list" class="w-3/4 mt-20 mx-auto my-0 mb-48 ">
      <% @properties.each do |property| %>
        <%= link_to property_path(property) do %>
          <%= render property %>
        <% end %>
      <% end %>
    </div>
  </div>

  <%= link_to "New property", new_property_path, class:"m-10" %>
</div>
