<div class="h-fit">
<div class="p-12 flex flex-col mx-auto w-9/12">
  <p style="color: green"><%= notice %></p>

  <h1 class="text-3xl font-normal leading-normal mt-0 mb-4 text-indigo-600">Let's find your home</h1>
  <div class="rounded-sm max-w-lg mx-auto" style="width: 100%; height: 320px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

    
  <div id="properties" class="mt-12">
  <% @properties.each do |property| %>
      <%= render property %> 
      <p>
       <%= link_to "Show this property", property %> 
      </p>
    <% end %> 
  </div> 

  <%= link_to "New property", new_property_path %>
</div>
</div>
